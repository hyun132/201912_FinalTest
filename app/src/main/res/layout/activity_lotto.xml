<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".LottoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번주 당첨번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/lottoNumTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="\?"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/lottoNumTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="+"/>

        <TextView
            android:id="@+id/bonusNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내가 구매하는 로또 번호"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/myNumTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="7"/>

        <TextView
            android:id="@+id/myNumTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="23"/>

        <TextView
            android:id="@+id/myNumTxt03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="30"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/myNumTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="32"/>

        <TextView
            android:id="@+id/myNumTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="40"/>

        <TextView
            android:id="@+id/myNumTxt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="43"/>

    </LinearLayout>

    <Button
        android:id="@+id/buyOneLottoBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로또 한장 구입하기"/>

    <Button
        android:id="@+id/buyAutoLottoBtn"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로또 구매 자동 반복하기"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 금액 : "/>

        <TextView
            android:id="@+id/usedMoneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨 금액 : "/>

        <TextView
            android:id="@+id/totalWinMoneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1등 당첨 횟수 - "/>

        <TextView
            android:id="@+id/firstRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2등 당첨 횟수 - "/>

        <TextView
            android:id="@+id/secondRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3등 당첨 횟수 - "/>

        <TextView
            android:id="@+id/thirdRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4등 당첨 횟수 - "/>

        <TextView
            android:id="@+id/fourthRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5등 당첨 횟수 - "/>

        <TextView
            android:id="@+id/fifthRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낙첨 횟수 - "/>

        <TextView
            android:id="@+id/noRnakCountTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0회"/>

    </LinearLayout>


</LinearLayout>